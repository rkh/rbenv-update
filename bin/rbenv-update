#!/usr/bin/env bash
set -e
[ -n "$RBENV_DEBUG" ] && set -x

indent_output() {
  while read data; do
    echo -e " \033[1;32m|\033[0m  $data"
  done
}

is_git_repo() {
  $(git rev-parse --git-dir &>/dev/null)
}

rbenv_update() {
  echo -e "\033[1;32mupdating $1\033[0m"
  if is_git_repo; then
    git checkout master 2>&1 | indent_output
    git pull origin master 2>&1 | indent_output
  else
    echo -e "Not a git repo; skipping..." | indent_output
  fi
  echo
}

cd "$(dirname $(which rbenv))"
rbenv_update rbenv

cd ${RBENV_ROOT:-$(rbenv root)}
for plugin in plugins/*; do
  pushd $plugin >/dev/null
  rbenv_update `basename $plugin`
  popd >/dev/null
done
